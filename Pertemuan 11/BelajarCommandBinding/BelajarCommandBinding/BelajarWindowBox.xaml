<Window x:Class="BelajarCommandBinding.BelajarWindowBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BelajarCommandBinding"
        mc:Ignorable="d"
        Title="BelajarWindowBox" Height="250" Width="300">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel.Resources>
            <Style TargetType="Button">
                <Setter Property="Margin" Value="0,0,0,10"/>
            </Style>
        </StackPanel.Resources>
        <Button Name="btnSederhana" Click="BtnSederhana_Click">MessageBox sederhana</Button>
        <Button Name="btnJudul" Click="BtnJudul_Click">MessageBox dengan judul</Button>
        <Button Name="btnTombol" Click="BtnTombol_Click">MessageBox dengan tombol</Button>
        <Button Name="btnRespon" Click="BtnRespon_Click">MessageBox dengan respon</Button>
        <Button Name="btnIcon" Click="BtnIcon_Click">MessageBox dengan icon</Button>
        <Button Name="btnPilihan" Click="BtnPilihan_Click">MessageBox dengan pilihan</Button>
    </StackPanel>
</Window>
