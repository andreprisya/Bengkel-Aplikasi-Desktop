                <WrapPanel>
                    <Label Content="Username : "/>
                    <TextBox />
                    <Label Content="Password : "/>
                    <PasswordBox />
                    <Button Content="Submit"/>
                </WrapPanel>
            </TabItem>
            <TabItem Header="Details">
                <WrapPanel>
                    <Image Source="D:\PCR\Semester 4\Bengkel Aplikasi Dekstop\Pertemuan6\Pertemuan6\assets\yellowButton.png"/>
                </WrapPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
